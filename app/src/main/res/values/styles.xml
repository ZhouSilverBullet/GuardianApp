<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppNormalTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppNormalTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppHalfTranslateTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/half_translate</item>
    </style>

    <style name="AppFullScreenTheme" parent="AppNormalTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextAppearanceHome" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <declare-styleable name="ColorTrackView">
        <attr name="ctvText" format="string" />
        <attr name="ctvText_size" format="dimension" />
        <attr name="ctvText_origin_color" format="color" />
        <attr name="ctvText_change_color" format="color" />
        <attr name="ctvProgress" format="float" />
        <attr name="ctvDirection" format="integer" />
    </declare-styleable>

    <style name="NormalSplash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/welcome_layler_drawable</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/global_scroll_thumb</item>
        <!--<item name="android:windowAnimationStyle">@style/MyAnimationActivity</item>-->
    </style>

    <style name="MyAnimationActivity">
        <item name="android:activityOpenEnterAnimation">@anim/wb_movie_enter_right</item>
        <item name="android:activityOpenExitAnimation">@anim/wb_movie_exit_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/wb_movie_enter_left</item>
        <item name="android:activityCloseExitAnimation">@anim/wb_movie_exit_right</item>
        <item name="android:taskOpenEnterAnimation">@anim/wb_movie_enter_right</item>
        <item name="android:taskOpenExitAnimation">@anim/wb_movie_exit_left</item>
        <item name="android:taskCloseEnterAnimation">@anim/wb_movie_enter_left</item>
        <item name="android:taskCloseExitAnimation">@anim/wb_movie_exit_right</item>
        <item name="android:taskToFrontEnterAnimation">@anim/wb_movie_enter_right</item>
        <item name="android:taskToFrontExitAnimation">@anim/wb_movie_exit_left</item>
        <item name="android:taskToBackEnterAnimation">@anim/wb_movie_enter_left</item>
        <item name="android:taskToBackExitAnimation">@anim/wb_movie_exit_right</item>
    </style>

    <declare-styleable name="TextAndTextView">
        <attr name="tatv_text_view" format="string" />
        <attr name="tatv_text_right_value" format="string" />
        <attr name="tatv_text_right_hint_value" format="string" />
        <attr name="tatv_text_img_is_show" format="boolean" />
        <attr name="tatv_line_is_show" format="boolean" />
    </declare-styleable>

    <style name="text">
        <item name="android:layout_width">0dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/color_303030</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppliedTabLayoutTextStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="green_bg_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/btn_green_solid_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="loading_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="LoadingDialogWindowStyle">
        <item name="android:windowEnterAnimation">@anim/loading_modal_in</item>
        <item name="android:windowExitAnimation">@anim/loading_modal_out</item>
    </style>
</resources>
