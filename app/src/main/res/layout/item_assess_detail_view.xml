<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:gravity="center"
        android:text="1"
        android:id="@+id/tv_num"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_item_log_num_bg"
        android:layout_width="15dp"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/color_313131"
        android:text="2019/11/12 17:18:23"
        app:layout_constraintLeft_toRightOf="@+id/tv_num"
        app:layout_constraintBottom_toBottomOf="@+id/tv_num"
        app:layout_constraintTop_toTopOf="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_assess_detail_item_bg"
        android:paddingLeft="20dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintLeft_toLeftOf="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="11dp"
            android:id="@+id/tvTitle1"
            android:textSize="13sp"
            android:textColor="@color/color_313131"
            android:text="上报："
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvScore1"
            android:layout_marginRight="57dp"
            android:textSize="13sp"
            android:textColor="@color/color_313131"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTitle1"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitle1"
            android:text="-0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/tvTitle2"
            android:textSize="13sp"
            android:textColor="@color/color_313131"
            android:text="事件标题：垃圾回收"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/tvTitle3"
            android:textSize="13sp"
            android:textColor="@color/color_313131"
            android:text="事件分类：垃圾类"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTemp"
            android:textSize="13sp"
            android:textColor="@color/color_313131"
            android:text=""
            app:layout_constraintTop_toBottomOf="@+id/tvTitle3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <ImageView
            android:paddingBottom="5dp"
            android:id="@+id/icon"
            android:src="@drawable/assess_icon_list_down"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitle1"
            android:layout_width="40dp"
            android:layout_height="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>