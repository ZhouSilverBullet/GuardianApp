<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F1F1"
        android:paddingTop="15dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/ll_containor_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/details" />

            <TextView
                android:id="@+id/tv_line_1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/color_32B16C" />

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/progress_status_normal" />

            <TextView
                android:id="@+id/tv_line_2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/color_DEEAE3" />

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/progress_status_normal" />

            <TextView
                android:id="@+id/tv_line_3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/color_DEEAE3" />

            <ImageView
                android:id="@+id/img_4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/progress_status_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_containor_temp"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <LinearLayout style="@style/progress_layout_weight">

                <TextView
                    android:id="@+id/tv_text_1"
                    style="@style/progress_text_dec"
                    android:text="已提交" />

                <TextView
                    android:id="@+id/tv_date_1"
                    style="@style/progress_text_date"
                    android:text="" />

            </LinearLayout>

            <LinearLayout style="@style/progress_layout_weight">

                <TextView
                    android:id="@+id/tv_text_2"
                    style="@style/progress_text_dec"
                    android:text="已派发" />

                <TextView
                    android:id="@+id/tv_date_2"
                    style="@style/progress_text_date"
                    tools:text="" />
            </LinearLayout>

            <LinearLayout style="@style/progress_layout_weight">

                <TextView
                    android:id="@+id/tv_text_3"
                    style="@style/progress_text_dec"
                    android:layout_height="match_parent"
                    android:text="已反馈"/>

                <TextView
                    android:id="@+id/tv_date_3"
                    style="@style/progress_text_date"
                    tools:text="" />
            </LinearLayout>

            <LinearLayout style="@style/progress_layout_weight">

                <TextView
                    android:id="@+id/tv_text_4"
                    style="@style/progress_text_dec"
                    android:text="已完成" />

                <TextView
                    android:id="@+id/tv_date_4"
                    style="@style/progress_text_date"
                    tools:text="" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>