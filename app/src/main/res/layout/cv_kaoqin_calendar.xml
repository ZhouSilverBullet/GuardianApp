<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@drawable/shape_calendar_data_select_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:tint="@color/gray"
        android:src="@drawable/current_month_icon"
        app:layout_constraintRight_toLeftOf="@+id/tv_data_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/tv_data_start"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toLeftOf="@+id/tvZhi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="2019-12-21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvZhi"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/color_313131"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="è‡³"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/tv_data_end"
        app:layout_constraintLeft_toRightOf="@+id/tvZhi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="2019-12-21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>