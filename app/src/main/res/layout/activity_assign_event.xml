<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.sdxxtop.guardianapp.ui.assignevent.assignmodel.AssignListModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.assignevent.AssignEventActivity">

        <com.sdxxtop.guardianapp.ui.widget.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:leftLayoutIconIsGray="true"
            app:rightTextColor="@color/black"
            app:rightTextValue="添加交办"
            app:titleValue="交办事件" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F0F7F8"
            app:layout_constraintTop_toBottomOf="@+id/titleView"
            app:tabIndicatorColor="@color/green"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/green"
            app:tabTextAppearance="@style/GridEventTabLayoutTextStyle"
            app:tabTextColor="#999999" />

        <TextView
            android:id="@+id/timeSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="请选择开始时间--------请选择结束时间"
            app:layout_constraintTop_toBottomOf="@+id/tablayout" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_assign_status_select"
            android:drawableRight="@drawable/arrow_down"
            android:onClick="@{() -> vm.stopLoad()}"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:text="已完成"
            app:layout_constraintTop_toBottomOf="@+id/timeSelect" />

        <LinearLayout
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/smartRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvStatus"
                app:srlEnableLoadMore="false"
                app:srlEnableRefresh="false">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>