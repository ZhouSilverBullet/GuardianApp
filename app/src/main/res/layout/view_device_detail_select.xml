<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="监测日期："
            android:textColor="@color/color_292929"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/iv_date_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/date_icon"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="13sp"
            android:layout_marginBottom="16dp"
            android:layout_toLeftOf="@+id/iv_date_icon"
            android:text=""
            android:textColor="@color/color_292929"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_E0E0E0"/>

    <RelativeLayout
        android:id="@+id/rl_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="时段："
            android:textColor="@color/color_292929"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/iv_time_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/time_icon"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="13sp"
            android:layout_marginBottom="16dp"
            android:layout_toLeftOf="@+id/iv_time_icon"
            android:text=""
            android:textColor="@color/color_292929"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_E0E0E0"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="时段监测图"
            android:textColor="@color/color_292929"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="5dp"
                android:background="#C490BF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM2.5"
                android:textColor="#C490BF"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="5dp"
                android:background="#00B7EE"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM10"
                android:textColor="#00B7EE"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/imaginary_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="预警线 50"
                android:textColor="@color/color_999999"
                android:textSize="12sp"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>