<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/text_and_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="上班时间"
            android:textColor="#333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/text_and_text_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/text_and_text_name"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="09:00"
            android:textColor="#999999"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/text_and_text_right_image"
            android:layout_width="11dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/next_step" />

        <TextView
            android:id="@+id/text_and_text_right_image2"
            android:layout_width="9dp"
            android:visibility="gone"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/time_more" />

    </RelativeLayout>

    <View
        android:id="@+id/text_and_text_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_dddddd" />
</LinearLayout>